@model Student
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apply</title>
    <link rel="stylesheet" href="/modules/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body>
    <div class="container m-4">
        <div class="card mx-auto" style="width: 500px;">
            <div class="card-header">
                </p>Başvuru Formu</p>
            </div>
            <div class="card-body">
                <form asp-action="apply" method="POST">
                    <div asp-validation-summary="All">

                    </div>
                    <div class="form-group">
                        <label asp-for="Name">Adınız</label>
                        <input asp-for="Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Eposta</label>
                        <input asp-for="Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone">Telefon</label>
                        <input asp-for="Phone" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Confirm">Kursa Katılacak mısınız?</label>
                        <select asp-for="Confirm" class="form-control">
                            <option value="">Seçiniz</option>
                            <option value="true">Evet,Geliyorum</option>
                            <option value="false">Hayır,Gelmiyorum</option>
                        </select>
                    </div>
                    <input type="submit" value="submit" class="btn btn-primary">
                </form>
            </div>
        </div>
    </div>
    </div>


</body>

</html>